{
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext",
      "dom.iterable"
    ],
    "baseUrl": ".",
    "noEmit": true,
    "target": "es5",
    "strict": true,
    "allowJs": true,
    "module": "esnext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "paths": {
      "api": [
        "src/api"
      ],
      "views/*": [
        "src/views/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "modules": [
        "src/modules"
      ]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "additional.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
